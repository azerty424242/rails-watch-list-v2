<div class="container">
  <h1 class="my-4">Create a New List (use Simple form instead)</h1>
  <%= form_with model: @list, url: lists_path, class: "form" do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter list name" %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control", placeholder: "Enter list description" %>
    </div>

    <div class="form-group">
      <%= form.label :image_url %>
      <%= form.text_field :image_url, class: "form-control", placeholder: "Enter image URL" %>
    </div>

    <%= form.submit "Create List", class: "btn btn-primary mt-3 mb-2" %>
  <% end %>

  <%= link_to 'Go back', lists_path %>
</div>
