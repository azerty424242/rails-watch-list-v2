


<div class="container">
  <h1 class="my-4">Create a New Movie</h1>
  <%= form_with model: @movie, url: movies_path, class: "form" do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter movie title" %>
    </div>

    <div class="form-group">
      <%= form.label :overview %>
      <%= form.text_area :overview, class: "form-control", placeholder: "Enter movie overview" %>
    </div>

    <div class="form-group">
      <%= form.label :poster_url %>
      <%= form.text_field :poster_url, class: "form-control", placeholder: "ENTER AN URL OR IT WILL CREATE A BUG" %>
    </div>

    <div class="form-group">
      <%= form.label :ratings %>
      <%= form.number_field :ratings, class: "form-control", step: 0.1, placeholder: "Enter movie ratings" %>
    </div>

    <%= form.submit "Create Movie", class: "btn btn-primary mt-3 mb-2" %>
  <% end %>

  <%= link_to 'Go back', movies_path %>
</div>
